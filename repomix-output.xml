  const user = useQuery(api.users.getCurrentUser);

  return {
    user,
    isLoading: user === undefined,
    isAuthenticated: user !== null && user !== undefined,
    tier: user?.tier ?? "free",
    isPro: user?.tier === "pro" || user?.tier === "pro_plus",
    isProPlus: user?.tier === "pro_plus",
  };
}
