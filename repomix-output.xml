import { v } from "convex/values";
import { internalMutation, internalAction } from "./_generated/server";
import { internal } from "./_generated/api";
import { retrier } from "./lib/retrier";

// ============ CONSTANTS ============

const WHALE_BATCH_SIZE = 5; // Rate limiting: process 5 whales per batch
const BATCH_DELAY_MS = 1000; // 1 second delay between batches
const CLEANUP_BATCH_SIZE = 500; // Larger batch for cleanup
const API_BASE_URL = "https://openapi.opinion.trade/openapi";

// ============ HELPERS ============

function validateApiKey(): string {
  const apiKey = process.env.OPINION_TRADE_API_KEY;
  if (!apiKey) {
    throw new Error("OPINION_TRADE_API_KEY not configured");
  }
  return apiKey;
}

// Type guard for market API response (matches Opinion.Trade API spec)
interface MarketApiResponse {
  marketId: number;
  marketTitle: string;
  status: number;
  statusEnum: "activated" | "resolved";
  marketType: number;
  yesLabel: string;
  noLabel: string;
  rules: string;
  yesTokenId: string;
  noTokenId: string;
  conditionId: string;
  resultTokenId: string | null;
  volume: string;
  volume24h: string;
  volume7d: string;
  quoteToken: string;
  chainId: string;
  questionId: string;
  incentiveFactor: Record<string, unknown>;
  createdAt: number;
  cutoffAt: number;
  resolvedAt: number | null;
}

function isValidMarketResponse(obj: unknown): obj is MarketApiResponse {
  return (
    typeof obj === "object" &&
    obj !== null &&
    "marketId" in obj &&
    typeof (obj as { marketId: unknown }).marketId === "number" &&
    "marketTitle" in obj &&
    typeof (obj as { marketTitle: unknown }).marketTitle === "string"
  );
}

// Type guard for trade API response (matches Opinion.Trade API spec)
interface TradeApiResponse {
  txHash: string;
  marketId: number;
  marketTitle: string;
  rootMarketId: number;
  rootMarketTitle: string;
  side: string;
  outcome: string;
  outcomeSide: number;
  outcomeSideEnum: "Yes" | "No";
  price: string;
  shares: string;
  amount: string;
  fee: string;
  profit: string;
  quoteToken: string;
  quoteTokenUsdPrice: string;
  usdAmount: string;
  status: number;
  statusEnum: "Pending" | "Filled" | "Cancelled";
  chainId: string;
  createdAt: number;
}

function isValidTradeResponse(obj: unknown): obj is TradeApiResponse {
  return (
    typeof obj === "object" &&
    obj !== null &&
    "marketId" in obj &&
    typeof (obj as { marketId: unknown }).marketId === "number" &&
    "txHash" in obj
  );
}

// API base response wrapper (actual format from Opinion.Trade API)
interface ApiBaseResponse<T> {
  errno: number;
  errmsg: string;
  result: T;
}

interface PaginatedResult<T> {
  total: number;
  list: T[];
}

// Delay helper for rate limiting
function delay(ms: number): Promise<void> {
  return new Promise((resolve) => setTimeout(resolve, ms));
}

// ============ MARKET SYNC ============

export const triggerMarketSync = internalMutation({
  args: {},
  handler: async (ctx) => {
    // Log sync start
    const syncId = await ctx.db.insert("syncLogs", {
      type: "markets",
      status: "running",
      startedAt: Date.now(),
    });

    // Schedule API call with retries
    await retrier.run(ctx, internal.scheduling.fetchMarketData, { syncId });

    return { syncId };
  },
});

export const fetchMarketData = internalAction({
  args: { syncId: v.id("syncLogs") },
  handler: async (ctx, args) => {
    const apiKey = validateApiKey();

    // Fetch multiple pages to get all markets
    let page = 1;
    const limit = 20; // API max is 20
    const allMarkets: MarketApiResponse[] = [];
    let hasMore = true;

    while (hasMore) {
      const response = await fetch(
        `${API_BASE_URL}/market?page=${page}&limit=${limit}`,
        {
          headers: {
            apikey: apiKey,
          },
        }
      );

      const data: ApiBaseResponse<PaginatedResult<MarketApiResponse>> =
        await response.json();

      if (!response.ok) {
        // Mark sync as failed
        await ctx.runMutation(internal.scheduling.markSyncFailed, {
          syncId: args.syncId,
          error: `API error: ${response.status} - ${
            data.errmsg || response.statusText
          }`,
        });
        throw new Error(`Opinion.Trade API error: ${response.status}`);
      }

      // Validate response structure
      if (
        data.errno !== 0 ||
        !data.result ||
        !Array.isArray(data.result.list)
      ) {
        await ctx.runMutation(internal.scheduling.markSyncFailed, {
          syncId: args.syncId,
          error: `Invalid API response: ${
            data.errmsg || "expected { errno: 0, result: { list: [] } }"
          }`,
        });
        throw new Error("Invalid API response structure");
      }

      allMarkets.push(...data.result.list);

      // Check if there are more pages
      hasMore = allMarkets.length < data.result.total && page  < Math.ceil(data.result.total / limit);
     
      page++;

      // Rate limiting: 15 req/sec, add small delay between pages
      if (hasMore) {
        await delay(500);
      }
    }

    // Filter and validate each market
    const validMarkets = allMarkets.filter(isValidMarketResponse);
    const invalidCount = allMarkets.length - validMarkets.length;

    if (invalidCount > 0) {
      console.warn(`Skipped ${invalidCount} invalid market records`);
    }

    // Process markets through internal mutation
    await ctx.runMutation(internal.scheduling.processMarketSyncResults, {
      syncId: args.syncId,
      markets: validMarkets,
      skippedCount: invalidCount,
    });

    return { syncId: args.syncId, marketCount: validMarkets.length };
  },
});

export const processMarketSyncResults = internalMutation({
  args: {
    syncId: v.id("syncLogs"),
    markets: v.array(v.any()),
    skippedCount: v.optional(v.number()),
  },
  handler: async (ctx, args) => {
    const { syncId, markets, skippedCount = 0 } = args;

    let processedCount = 0;
    let errorCount = 0;

    for (const market of markets as MarketApiResponse[]) {
      try {
        // Use existing upsertMarket mutation
        await ctx.runMutation(internal.markets.upsertMarket, {
          externalId: String(market.marketId),
          platform: "opinion_trade",
          title: market.marketTitle,
          description: market.rules,
          category: "prediction", // API doesn't provide category
          yesPrice: 0.5, // Latest price needs separate token endpoint call
          noPrice: 0.5,
          volume: parseFloat(market.volume) || 0,
          volume24h: parseFloat(market.volume24h) || 0,
          liquidity: 0,
          endDate: market.cutoffAt,
          url: `https://opinion.trade/market/${market.marketId}`,
          imageUrl: undefined,
        });

        processedCount++;
      } catch (error) {
        errorCount++;
        console.error(`Failed to upsert market ${market.marketId}:`, error);
      }
    }

    // Determine status based on results
    const hasErrors = errorCount > 0 || skippedCount > 0;
    const status = processedCount === 0 && hasErrors ? "failed" : "completed";

    // Update sync log with detailed results
    await ctx.db.patch(syncId, {
      status,
      endedAt: Date.now(),
      itemCount: processedCount,
      error: hasErrors
        ? `Processed: ${processedCount}, Errors: ${errorCount}, Skipped: ${skippedCount}`
        : undefined,
    });

    return { processedCount, errorCount, skippedCount };
  },
});

// ============ WHALE SYNC ============

export const triggerWhaleSync = internalMutation({
  args: {},
  handler: async (ctx) => {
    const syncId = await ctx.db.insert("syncLogs", {
      type: "whales",
      status: "running",
      startedAt: Date.now(),
    });

    // Get all tracked whale addresses
    const whales = await ctx.db.query("whales").collect();

    if (whales.length === 0) {
      await ctx.db.patch(syncId, {
        status: "completed",
        endedAt: Date.now(),
        itemCount: 0,
      });
      return { syncId, message: "No whales to sync" };
    }

    // Schedule API call with retries
    const whaleAddresses = whales.map((w) => w.address);
    await retrier.run(ctx, internal.scheduling.fetchWhaleActivity, {
      syncId,
      whaleAddresses,
    });

    return { syncId };
  },
});

export const fetchWhaleActivity = internalAction({
  args: {
    syncId: v.id("syncLogs"),
    whaleAddresses: v.array(v.string()),
  },
  handler: async (ctx, args) => {
    const apiKey = validateApiKey();
    const activities: Array<{
      address: string;
      trades: Array<{
        marketId: string;
        action: "BUY" | "SELL";
        outcome: string; // The outcome label (e.g., "Yes", "No", or custom label for categorical)
        outcomeSide: number; // Numeric side identifier (0 or 1)
        amount: number;
        price: number;
        timestamp: number;
        txHash?: string;
      }>;
    }> = [];

    let totalSkipped = 0;
    let fetchErrors = 0;

    // Process in batches with rate limiting
    for (let i = 0; i < args.whaleAddresses.length; i += WHALE_BATCH_SIZE) {
      const batch = args.whaleAddresses.slice(i, i + WHALE_BATCH_SIZE);

      // Add delay between batches (except first)
      if (i > 0) {
        await delay(BATCH_DELAY_MS);
      }

      // Process batch
      for (const address of batch) {
        try {
          // Correct endpoint: /openapi/trade/user/{walletAddress}
          const response = await fetch(
            `${API_BASE_URL}/trade/user/${address}?limit=20`,
            {
              headers: {
                apikey: apiKey, // Correct header name
              },
            }
          );

          const data: ApiBaseResponse<PaginatedResult<TradeApiResponse>> =
            await response.json();

          if (!response.ok) {
            fetchErrors++;
            console.error(
              `API error for ${address}: ${response.status} - ${
                data.errmsg || ""
              }`
            );
            continue;
          }

          // Validate response structure
          if (
            data.errno !== 0 ||
            !data.result ||
            !Array.isArray(data.result.list)
          ) {
            fetchErrors++;
            console.error(`Invalid response for ${address}: ${data.errmsg}`);
            continue;
          }

          // Validate and transform trades
          const validTrades: (typeof activities)[0]["trades"] = [];

          for (const t of data.result.list) {
            if (!isValidTradeResponse(t)) {
              totalSkipped++;
              continue;
            }

            const amount = parseFloat(t.amount);
            const price = parseFloat(t.price);
            const timestamp = t.createdAt;

            // Skip invalid numeric values
            if (isNaN(amount) || isNaN(price) || !timestamp) {
              totalSkipped++;
              continue;
            }

            // Map side to action (side from API is like "BUY"/"SELL")
            const action = t.side.toUpperCase() === "SELL" ? "SELL" : "BUY";

            validTrades.push({
              marketId: String(t.marketId),
              action: action as "BUY" | "SELL",
              outcome: t.outcome, // Use the outcome label as-is from the API
              outcomeSide: t.outcomeSide, // Numeric side identifier
              amount,
              price,
              timestamp,
              txHash: t.txHash,
            });
          }

          activities.push({ address, trades: validTrades });
        } catch (error) {
          fetchErrors++;
          console.error(`Failed to fetch trades for ${address}:`, error);
        }
      }
    }

    // Process through internal mutation
    await ctx.runMutation(internal.scheduling.processWhaleSyncResults, {
      syncId: args.syncId,
      activities,
      fetchErrors,
      skippedTrades: totalSkipped,
    });

    return { syncId: args.syncId, whaleCount: activities.length };
  },
});

export const processWhaleSyncResults = internalMutation({
  args: {
    syncId: v.id("syncLogs"),
    activities: v.array(
      v.object({
        address: v.string(),
        trades: v.array(
          v.object({
            marketId: v.string(),
            action: v.union(v.literal("BUY"), v.literal("SELL")),
            outcome: v.string(), // Outcome label from the API
            outcomeSide: v.number(), // Numeric side identifier (0 or 1)
            amount: v.number(),
            price: v.number(),
            timestamp: v.number(),
            txHash: v.optional(v.string()),
          })
        ),
      })
    ),
    fetchErrors: v.optional(v.number()),
    skippedTrades: v.optional(v.number()),
  },
  handler: async (ctx, args) => {
    const { syncId, activities, fetchErrors = 0, skippedTrades = 0 } = args;
    let newActivityCount = 0;
    let processErrors = 0;

    for (const { address, trades } of activities) {
      // Find whale by address
      const whale = await ctx.db
        .query("whales")
        .withIndex("by_address", (q) => q.eq("address", address))
        .unique();

      if (!whale) continue;

      // Get latest synced timestamp for this whale
      const latestActivity = await ctx.db
        .query("whaleActivity")
        .withIndex("by_whaleId_timestamp", (q) => q.eq("whaleId", whale._id))
        .order("desc")
        .first();

      const lastTimestamp = latestActivity?.timestamp ?? 0;

      // Insert new trades
      for (const trade of trades) {
        if (trade.timestamp <= lastTimestamp) continue;

        // Find market by external ID
        const market = await ctx.db
          .query("markets")
          .withIndex("by_externalId", (q) =>
            q.eq("platform", "opinion_trade").eq("externalId", trade.marketId)
          )
          .unique();

        if (!market) continue;

        try {
          // Use existing recordActivity mutation
          await ctx.runMutation(internal.whaleActivity.recordActivity, {
            whaleId: whale._id,
            marketId: market._id,
            action: trade.action,
            outcome: trade.outcome,
            outcomeSide: trade.outcomeSide,
            amount: trade.amount,
            price: trade.price,
            platform: "opinion_trade",
            txHash: trade.txHash,
            timestamp: trade.timestamp,
          });

          newActivityCount++;
        } catch (error) {
          processErrors++;
          console.error(`Failed to record activity:`, error);
        }
      }
    }

    // Determine status
    const totalErrors = fetchErrors + processErrors;
    const hasErrors = totalErrors > 0 || skippedTrades > 0;
    const status =
      newActivityCount === 0 && activities.length > 0 && totalErrors > 0
        ? "failed"
        : "completed";

    await ctx.db.patch(syncId, {
      status,
      endedAt: Date.now(),
      itemCount: newActivityCount,
      error: hasErrors
        ? `New: ${newActivityCount}, FetchErrs: ${fetchErrors}, ProcessErrs: ${processErrors}, Skipped: ${skippedTrades}`
        : undefined,
    });

    return { newActivityCount, processErrors };
  },
});

// ============ SYNC HELPERS ============

export const markSyncFailed = internalMutation({
  args: {
    syncId: v.id("syncLogs"),
    error: v.string(),
  },
  handler: async (ctx, args) => {
    await ctx.db.patch(args.syncId, {
      status: "failed",
      endedAt: Date.now(),
      error: args.error,
    });
  },
});

// ============ STATS COMPUTATION ============

export const computeWhaleStats = internalMutation({
  args: {},
  handler: async (ctx) => {
    const whales = await ctx.db.query("whales").collect();
    let updatedCount = 0;

    for (const whale of whales) {
      // Get all activity for this whale
      const activity = await ctx.db
        .query("whaleActivity")
        .withIndex("by_whaleId_timestamp", (q) => q.eq("whaleId", whale._id))
        .collect();

      // Compute stats
      let totalVolume = 0;
      let lastActiveAt = whale.lastActiveAt;

      for (const trade of activity) {
        totalVolume += trade.amount;
        lastActiveAt = Math.max(lastActiveAt, trade.timestamp);
      }

      // Update whale record
      await ctx.db.patch(whale._id, {
        totalVolume,
        tradeCount: activity.length,
        lastActiveAt,
        updatedAt: Date.now(),
      });

      updatedCount++;
    }

    return { updatedCount };
  },
});

// ============ CLEANUP ============

const RETENTION_DAYS = 90;

export const cleanupOldActivity = internalMutation({
  args: {},
  handler: async (ctx) => {
    const cutoffTimestamp = Date.now() - RETENTION_DAYS * 24 * 60 * 60 * 1000;
    let totalDeleted = 0;

    // Delete old activity in larger batches
    const oldActivity = await ctx.db
      .query("whaleActivity")
      .withIndex("by_timestamp")
      .filter((q) => q.lt(q.field("timestamp"), cutoffTimestamp))
      .take(CLEANUP_BATCH_SIZE);

    for (const activity of oldActivity) {
      await ctx.db.delete(activity._id);
      totalDeleted++;
    }

    // Delete old sync logs
    const oldSyncs = await ctx.db
      .query("syncLogs")
      .withIndex("by_startedAt")
      .filter((q) => q.lt(q.field("startedAt"), cutoffTimestamp))
      .take(CLEANUP_BATCH_SIZE);

    for (const sync of oldSyncs) {
      await ctx.db.delete(sync._id);
      totalDeleted++;
    }

    return {
      totalDeleted,
      cutoffDate: new Date(cutoffTimestamp).toISOString(),
    };
  },
});
